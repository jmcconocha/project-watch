{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Project Watch",
  "version": "1.0.0",
  "identifier": "com.projectwatch.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Project Watch",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "shortDescription": "Project management for developers",
    "longDescription": "A native Mac app for tracking and managing your development projects with GitHub integration.",
    "macOS": {
      "signingIdentity": "Developer ID Application: Jeffrey Mcconocha (G98AX8B2QD)"
    }
  }
}
